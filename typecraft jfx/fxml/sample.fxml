                        <Font name="Calibri" size="30.0" />
                    </font>
                </Label>
                <Button fx:id="playButton" alignment="BOTTOM_LEFT" layoutX="245.0" layoutY="204.0" mnemonicParsing="false" onAction="#playGame" prefHeight="35.0" prefWidth="110.0" style="-fx-background-color: #00008b; -fx-cursor: hand;" text="Play" textFill="WHITE">
